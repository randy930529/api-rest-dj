include ../generic/mixins

-const row20={height:20, style:"height:15.0pt"}

mixin setData(data=[])
    each val in data
        tr(height=20 style={height:'15.0pt'})
            td.xl-65(colspan=2 height=20 style="height:15.0pt")=val.date
            td.xl-65(colspan=3 height=20 style="height:15.0pt")=val.detail
            td.xl-65(height=20 style="height:15.0pt;text-align: right")=(val.debe && val.debe!=='0'?val.debe:"")
            td.xl-65(height=20 style="height:15.0pt;text-align: right")=(val.haber && val.haber!=='0'?val.haber:"")
            td.xl-65(height=20 style="height:15.0pt;text-align: right")=val.saldo
    else
        td(colspan=9) There are no values

table.page-one(
    role='presentation'
    border=0
    cellpadding=0
    cellspacing=0
    width=720
    style="border-collapse:collapse;table-layout:fixed;width:540pt;margin:72px 68px;"
)

  block column
      col(width="80" span="9" style="width:60pt")
  tbody(style="font-size: 11.0pt;font-style: normal;font-family: Calibri, sans-serif;")
    
    block tHeadContent
        tr(height=20 style={height:'15.0pt'})
            td.xl-65(colspan=6 height=20 width=480 style="height:15.0pt;width:360pt") CONTRIBUYENTE: 
                font(style="font-weight: 700;text-decoration: underline")=fullName
            td.xl-65(colspan=3 width=240 style="width:180pt") IMPRESO: 
                font(style="text-decoration: underline")=printedDate
        tr(height=20 style={height:'15.0pt'})
            td.xl-65(colspan=6 height=20 width=480 style="height:15.0pt;width:360pt") NIT: 
                font(style="font-weight: 700;")=nit
        tr(height=20 style={height:'15.0pt'})
        tr(height=20 style={height:'15.0pt'})
            td.xl-65(colspan=9 height=20 style="height:15.0pt;text-align: center;font-weight: 700") MAYOR 
        tr(height=20 style={height:'15.0pt'})
            td.xl-65(colspan=9 height=20 style="height:15.0pt;text-align: center") CUENTA: 
                font(style="font-weight: 700;")=accountCode
        tr(height=20 style={height:'15.0pt'})
        tr(height=20 style={height:'15.0pt'})
    
    block tBodyContent
        tr(height=20 style={height:'15.0pt'})
            td.xl-65(colspan=2 height=20 style="font-weight: 700;height:15.0pt") FECHA
            td.xl-65(colspan=3 height=20 style="font-weight: 700;height:15.0pt") DETALLES
            td.xl-65(height=20 style="font-weight: 700;height:15.0pt;text-align: right") DEBE
            td.xl-65(height=20 style="font-weight: 700;height:15.0pt;text-align: right") HABER
            td.xl-65(height=20 style="font-weight: 700;height:15.0pt;text-align: right") SALDO
        +setData(accounting)
        tr(height=row20.height style=row20.style)
            td(colspan=5 height=20)
            +signatureLine({style:"padding-left: 6pt;"})
            +signatureLine({style:"padding-left: 6pt;"})
            td
        tr(height=row20.height style=row20.style)
            td.xl-65(colspan=2 height=20 style="height:15.0pt")
            td.xl-65(colspan=3 height=20 style="font-weight: 700;height:15.0pt;text-align: center") TOTAL
            td.xl-65(height=20 style="font-weight: 700;height:15.0pt;text-align: right")= (totalDebe && totalDebe!=='0'?totalDebe:"")
            td.xl-65(height=20 style="font-weight: 700;height:15.0pt;text-align: right")= (totalHaber && totalHaber!=='0'?totalHaber:"")
            td.xl-65(height=20 style="height:15.0pt")
        tr(height=row20.height style=row20.style)
        tr(height=row20.height style=row20.style)
            +signatureLine({colspan:4, rowspan:3, height:65, style:"height:48.75pt;"})
            td.xl-65(rowspan=7)
            +signatureLine({colspan:3, rowspan:3})
        tr(height=20 style={height:'15.0pt'})
        tr(height=25 style={height:'18.75pt'})
        tr(height=20 style={height:'15.0pt'})
            td.xl-65(colspan=4 height=20 style="height:15.0pt;text-align: center") CONFECCIONADO POR:
            td.xl-65(colspan=3 height=20 style="height:15.0pt;text-align: center") APROBADO POR:
        tr(height=20 style={height:'15.0pt'})
            td.xl-65(colspan=4 height=20 style="height:15.0pt") Nombre:
            td.xl-65(colspan=4 height=20 style="height:15.0pt") Nombre: 
                font(style="font-weight: 700;")=fullName
        tr(height=20 style={height:'15.0pt'})
            td.xl-65(colspan=4 height=20 style="height:15.0pt") Fecha:
            td.xl-65(colspan=4 height=20 style="height:15.0pt") Fecha:
        tr(height=20 style={height:'15.0pt'})
            td.xl-65(colspan=4 height=20 style="height:15.0pt") Cargo:
            td.xl-65(colspan=4 height=20 style="height:15.0pt") Cargo: TITULAR
        tr(height=20 style={height:'15.0pt'})
